@model FakulteDto
@{
    ViewData["Title"] = "Fakülte Düzenle";
}


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Fakülte Düzenle</h2>


        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["fakulteID"]">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Ad</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="fakulteAd">
                    <span asp-validation-for="fakulteAd" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Düzenle</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Fakulte" asp-action="Index" role="button">
                        İptal
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>